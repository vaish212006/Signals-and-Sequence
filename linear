clear all
close all
clc

n=0:40;
a1=2;
a2=1;
x1=cos(2*pi*0.1*n);
x2=cos(2*pi*0.4*n);
x=a1*x1+a2*x2;
LHS=n.*x;
y1=a1*n.*x1;
y2=a2*n.*x2;
RHS=y1+y2;
d=round(LHS-RHS);
if d==0
    disp('linear');
else 
    disp('non linear');
end 

subplot(3,1,1);
stem(n,LHS);

subplot(3,1,2);
stem(n,RHS);

subplot(3,1,3);
stem(n,d);