close all 
clear all 
clc

t=-10:0.01:10;
T=4;
fm=1/T;
x=cos(2*pi*fm*t);
subplot(2,2,1);
plot(t,x);
title('orginal signal');

fs=1.3*fm;
n=-10:1/fs:10;
y=cos(2*pi*fm*n);
subplot(2,2,2);
stem(n,y);
hold on
plot(n,y);
title('fs=1.3*fm');

fs=2*fm;
n=-10:1/fs:10;
y=cos(2*pi*fm*n);
subplot(2,2,3);
stem(n,y);
hold on
plot(n,y);
title('fs=2*fm');

fs=13*fm;
n=-10:1/fs:10;
y=cos(2*pi*fm*n);
subplot(2,2,4);
stem(n,y);
hold on
plot(n,y);
title('fs=13*fm');